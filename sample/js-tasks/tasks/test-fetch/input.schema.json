{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "endpoint": {
      "type": "string",
      "description": "HTTP endpoint to fetch data from",
      "default": "/json",
      "enum": ["/json", "/get", "/uuid", "/ip"]
    },
    "include_headers": {
      "type": "boolean",
      "description": "Whether to include custom headers in the request",
      "default": false
    }
  },
  "required": ["endpoint"]
}